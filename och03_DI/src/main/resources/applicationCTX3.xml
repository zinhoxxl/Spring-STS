<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<bean id="student1" class="DI03.Student">
	     <constructor-arg>
	         <value>연개소문</value>
	     </constructor-arg>
	     <constructor-arg value="50" />
	     <constructor-arg>
	         <value>4학년</value>
	     </constructor-arg>
	     <constructor-arg value="25번"></constructor-arg>
	     <property name="name"><value>연아들</value></property>
	</bean>
	
	<bean id="student2" class="DI03.Student"> 
	     <!-- 적는순서 바뀌면 인덱스로 타입에 맞는 순서 가리켜야함  -->
	     <constructor-arg index="1" value="38" />
	      <constructor-arg index="0" value="양만춘" />
	     <constructor-arg value="3학년"/>
	     <constructor-arg value="11번" />
	</bean>
	
	<bean id="studentInfo" class="DI03.StudentInfo">
	    <constructor-arg>
	       <ref bean="student1"/>
	    </constructor-arg>
	</bean>


</beans>
